@model IEnumerable<Sistema_Gestion_TechNova.Models.Producto>

<h2>Productos</h2>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Buscar..." class="form-control" />
</form>

<a href="/Producto/Create" class="btn btn-primary mb-3">Nuevo Producto</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Codigo</td>
                <td>@p.Nombre</td>
                <td>$@p.PrecioUnitario</td>
                <td>@p.StockDisponible</td>
                <td>
                    <a href="/Producto/Details/@p.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a href="/Producto/Edit/@p.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/Producto/Delete/@p.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
