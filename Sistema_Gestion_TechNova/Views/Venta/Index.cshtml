@model IEnumerable<Sistema_Gestion_TechNova.Models.Venta>

<h2>Ventas</h2>

<form method="get" class="row mb-3">
    <div class="col-4">
        <input type="text" name="cliente" value="@ViewBag.Cliente" placeholder="Cliente..." class="form-control" />
    </div>

    <div class="col-3">
        <input type="date" name="desde" value="@ViewBag.Desde" class="form-control" />
    </div>

    <div class="col-3">
        <input type="date" name="hasta" value="@ViewBag.Hasta" class="form-control" />
    </div>

    <div class="col-2">
        <button class="btn btn-primary w-100">Buscar</button>
    </div>
</form>

<a href="/Venta/Create" class="btn btn-success mb-3">Registrar Venta</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.ClienteNombre</td>
                <td>@v.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                <td>$@v.Total</td>
                <td>
                    <a href="/Venta/Details/@v.Id" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
